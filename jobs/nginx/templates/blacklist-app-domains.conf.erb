    location / {
      <% if blacklisted_domain.key?("allow") %>
        <% blacklisted_domain['allow'].each do |allowed_ip| %>
      allow <%= allowed_ip %>;
        <% end %>
      <% end %>
      deny all;
      include /var/vcap/store/nginx/conf/default-location-header.conf;
    }
}
  <% end %>
<% end %>
