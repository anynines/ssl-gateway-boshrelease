<% domain_blacklist = p('a9s_ssl_gateway.domain_blacklist') %>

<% domain_blacklist.each do |blacklisted_domain| %>
server {
    listen       80;
    server_name  *.<%= blacklisted_domain['domain'] %> <%= blacklisted_domain['domain'] %>;

    access_log  /var/vcap/sys/log/nginx/<%= blacklisted_domain['domain'] %>.access.log  main;
    error_log   /var/vcap/sys/log/nginx/<%= blacklisted_domain['domain'] %>.error.log;

    location / {
      proxy_buffering  off;
      proxy_set_header X-Forwarded-Host $host;
      proxy_set_header X-Forwarded-Server $host;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header Host $http_host;
      proxy_pass http://cf-routers;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
      root   /usr/share/nginx/html;
    }

    location / {
      deny  all;
      <% if blacklisted_domain['allow'] do %>
        <% blacklisted_domain['allow'].each do |allowed_ip| %>
      allow <%= allowed_ip %>;
        <% end %>
      <% end %>
    }
}
<% end %>