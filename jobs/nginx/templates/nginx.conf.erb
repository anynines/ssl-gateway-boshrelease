<% elb_address = p('a9s_ssl_gateway.elb_address') %>

user  vcap;
worker_processes  12;
worker_rlimit_nofile 4096;

error_log  /var/vcap/sys/log/nginx/error.log   debug;

events {
    worker_connections  2048;
    use epoll;
}

http {
  include       /var/vcap/packages/nginx/conf/mime.types;
  default_type  application/octet-stream;

  log_format  main  '$client_ip - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';

  access_log  /var/vcap/sys/log/nginx/access.log  main;

  <% unless elb_address.to_s.empty? %>
  set_real_ip_from  <%= elb_address %>;
  <% end %>

  map $proxy_protocol_addr $real_ip_module_header {
    default X-Forwarded-For; 
    ~.      proxy_protocol;
  }

  map $proxy_protocol_addr $client_ip {
    default $remote_addr;
    ~.      $proxy_protocol_addr
  }

  map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
  }

  client_max_body_size 512M;

  sendfile        on;
  tcp_nopush      on;
  tcp_nodelay     on;

  keepalive_timeout  75 20;

  include /var/vcap/store/nginx/conf.d/*.conf;
  include /var/vcap/store/nginx/sites-enabled/*;

  proxy_read_timeout 300;
  proxy_send_timeout 300;
  proxy_headers_hash_bucket_size 128;

  server_tokens off;
}

include /var/vcap/store/nginx/ssh-proxy.conf;
