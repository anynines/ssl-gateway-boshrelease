<% cf_app_domain = p('a9s_ssl_gateway.default_apps_domain') %>

server {
  if ($proxy_protocol_addr) {
    listen 80 proxy_protocol;
  } else {
    listen 80;
  }
  
  server_name  <%= cf_app_domain %> *.<%= cf_app_domain %>;

  access_log  /var/vcap/sys/log/nginx/<%= cf_app_domain %>.access.log  main;
  error_log   /var/vcap/sys/log/nginx/<%= cf_app_domain %>.error.log;
  
  include /var/vcap/store/nginx/default-vserver.conf;

  location / {
    include /var/vcap/store/nginx/default-location-header.conf;
  }
  
  return 301 https://$host$request_uri;
}

server {
  if ($proxy_protocol_addr) {
    listen 443 proxy_protocol;
  } else {
    listen 443;
  }

  server_name  <%= cf_app_domain %> *.<%= cf_app_domain %>;
  
  include /var/vcap/store/nginx/default-ssl.conf;
  include /var/vcap/store/nginx/default-vserver.conf;

  access_log  /var/vcap/sys/log/nginx/<%= cf_app_domain %>.access.log  main;
  error_log   /var/vcap/sys/log/nginx/<%= cf_app_domain %>.error.log;

  ssl_certificate      /var/vcap/store/nginx/ssl/wild.<%= cf_app_domain %>.crt.bundle;
  ssl_certificate_key  /var/vcap/store/nginx/ssl/wild.<%= cf_app_domain %>.key;

  location / {
    include /var/vcap/store/nginx/default-location-header.conf;
  }
}

server {
  if ($proxy_protocol_addr) {
    listen 4443 proxy_protocol;
  } else {
    listen 4443;
  }

  server_name  <%= cf_app_domain %> *.<%= cf_app_domain %>;
  
  include /var/vcap/store/nginx/default-ssl.conf;
  include /var/vcap/store/nginx/default-vserver.conf;

  access_log  /var/vcap/sys/log/nginx/<%= cf_app_domain %>.access.log  main;
  error_log   /var/vcap/sys/log/nginx/<%= cf_app_domain %>.error.log;

  ssl_certificate      /var/vcap/store/nginx/ssl/wild.<%= cf_app_domain %>.crt.bundle;
  ssl_certificate_key  /var/vcap/store/nginx/ssl/wild.<%= cf_app_domain %>.key;

  location / {
    include /var/vcap/store/nginx/default-location-header.conf;
  }
}

<% if_p('a9s_ssl_gateway.ssh_domain') do %>
stream {
  server {
    listen 2222;
#    server_name <%= p('a9s_ssl_gateway.ssh_domain') %>;

    access_log  /var/vcap/sys/log/nginx/ssh.access.log  main;
    error_log   /var/vcap/sys/log/nginx/ssh.error.log;
    proxy_pass ssh_routers;
  }
}
<% end %>
