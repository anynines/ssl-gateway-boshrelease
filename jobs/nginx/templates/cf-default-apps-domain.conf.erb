<% cf_app_domain = p('a9s_ssl_gateway.default_apps_domain') %>

server {
    listen       80;
    server_name  <%= cf_app_domain %> *.<%= cf_app_domain %>;

    access_log  /var/vcap/sys/log/nginx/<%= cf_app_domain %>.access.log  main;
    error_log   /var/vcap/sys/log/nginx/<%= cf_app_domain %>.error.log;

    location / {
        proxy_buffering  off;
     	proxy_set_header X-Forwarded-Host $host;
    	proxy_set_header X-Forwarded-Server $host;
    	proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    	proxy_set_header X-Forwarded-Proto $scheme;
    	proxy_set_header Host $http_host;
    	proxy_pass http://cf-routers;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
      root   /usr/share/nginx/html;
    }

    location ~ /\.ht {
      deny  all;
    }
}

server {
    listen       443;
    server_name  <%= cf_app_domain %> *.<%= cf_app_domain %>;

    access_log  /var/vcap/sys/log/nginx/<%= cf_app_domain %>.access.log  main;
    error_log   /var/vcap/sys/log/nginx/<%= cf_app_domain %>.error.log;

    ssl                  on;
    ssl_certificate      /var/vcap/store/nginx/ssl/wild.<%= cf_app_domain %>.crt.bundle;
    ssl_certificate_key  /var/vcap/store/nginx/ssl/wild.<%= cf_app_domain %>.key;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_session_tickets off;

    ssl_protocols TLSv1.2;
    ssl_ciphers 'ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-SHA384:ECDHE-RSA-AES256-SHA384:ECDHE-ECDSA-AES128-SHA256:ECDHE-RSA-AES128-SHA256';
