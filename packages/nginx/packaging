set -e -x

echo "Extracting pcre..."
tar xvf nginx/pcre.tar.gz

echo "Extracting nginx..."
tar xvf nginx/nginx.tar.gz

echo "Building nginx..."
pushd nginx-* > /dev/null
  ./configure \
    --with-debug \
    --with-pcre=../pcre-1.0.4 \
    --prefix=${BOSH_INSTALL_TARGET} \
    --with-http_ssl_module \
    --with-stream

  make
  make install
popd
