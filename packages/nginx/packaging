set -e -x

echo "Extracting pcre..."
tar xzvf pcre/pcre-*.tgz

echo "Extracting nginx..."
tar xzvf nginx/nginx-*.tgz

echo "Building nginx..."

pushd nginx/*
  ./configure \
    --with-debug \
    --with-pcre=../pcre/* \
    --prefix=${BOSH_INSTALL_TARGET} \
    --with-http_ssl_module \
    --with-stream

  make
  make install
popd
