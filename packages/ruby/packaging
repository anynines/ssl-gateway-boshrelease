# Available variables
# $BOSH_COMPILE_TARGET - where this package & spec'd source files are available
# $BOSH_INSTALL_TARGET - where you copy/install files to be included in package

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Detect # of CPUs so make jobs can be parallelized
CPUS=$(grep -c ^processor /proc/cpuinfo)

export HOME=/var/vcap
export LIBYAML_PATH=/var/vcap/packages/libyaml
export ZLIB_PATH=/var/vcap/packages/zlib

echo "Extracting autoconf..."
tar xvf ruby/autoconf.tar.gz 

echo "Extracting ruby..."
tar xvf ruby/ruby.tar.gz

echo "Extracting rubygems..."
tar xvf ruby/rubygems.tar.gz

echo "Extracting bundler..."
tar xvf ruby/bundler.tar.gz

echo "Building autoconf..."
pushd autoconf-* > /dev/null
  ./configure
  make
  make install
popd > /dev/null

echo "Building ruby..."
pushd ruby-* > /dev/null
  autoconf
  ./configure --prefix=${BOSH_INSTALL_TARGET} --enable-shared --disable-install-doc --with-opt-dir=$LIBYAML_PATH --with-opt-dir=$ZLIB_PATH
  make -j${CPUS} && make install
popd > /dev/null

echo "Building rubygems..."
  pushd rubygems-* > /dev/null
  ${BOSH_INSTALL_TARGET}/bin/ruby setup.rb
  fi
popd > /dev/null

echo "Building bundler..."
pushd bundler-* > /dev/null
  ${BOSH_INSTALL_TARGET}/bin/gem build bundler.gemspec
  ${BOSH_INSTALL_TARGET}/bin/gem install *.gem --no-ri --no-rdoc
popd > /dev/null
